
@model List<Movie>
@*@model String*@
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@foreach (Movie m in Model)
{
    <p>@m.Title</p>
    <p>@m.Overview</p>
    <p>@m.VoteAverage</p>
    <p>@m.ReleaseDate.ToShortDateString()</p>
    @foreach (Genre genre in m.Genres)
    {
        <p>@genre.Name</p>
    }
}