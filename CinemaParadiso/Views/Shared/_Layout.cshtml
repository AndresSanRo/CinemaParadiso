<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cinema Paradiso</title>

    <environment include="Development">
        <link rel="shortcut icon" type="image/png" href="~/images/icons/popcorn16px.png" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />

    </environment>    
    @RenderSection("styles", required: false)
</head>
<body class="container-fluid bg-dark">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <img src="~/images/icons/popcorn32px.png" />
        <a class="navbar-brand my-2" asp-action="Index" asp-controller="Home">Cinema paradiso</a>
        <div class="collapse navbar-collapse justify-content-between" id="navbar">
            <div class="navbar-nav">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                
            </div>
            <div class="navbar-nav">
                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                    <form class="form-inline my-2 my-lg-0 mr-2" asp-action="Search" asp-controller="Home" method="GET">
                        <div class="input-group">
                            <input class="form-control" name="searchString" type="text" placeholder="Busqueda..." aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Buscar</button>
                            </div>
                        </div>                        
                        @*<button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Buscar</button>*@
                    </form>
                </div>

                @if (Context.User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button type="button" class="btn btn-outline-danger dropdown-toggle" data-toggle="dropdown">
                            img
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Mi lista</a>
                            <a class="dropdown-item" href="#">Perfil</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Cerrar sesión</a>
                        </div>
                    </div>
                    @*<h5>@Context.User.Identity.Name</h5>*@
                }
                else
                {
                    <a asp-action="Login" asp-controller="Validation">
                        <button class="btn btn-outline-danger nav-item">Inicia sesión</button>
                    </a>
                }
                    
            </div>
        </div>            
    </nav>

    <main role="main" class="text-white">               
        @RenderBody()
    </main><!-- /.container -->
    @*<footer class="footer fixed-bottom bg-dark footer-dark">
        <div class="container-fluid text-white">
            <div class="row">
                <div class="col-lg 12">
                    <p><div>Icons made by <a href="https://www.freepik.com/" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div></p>
                </div>
            </div>
        </div>
    </footer>*@
    <environment include="Development">
        <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>    
    @RenderSection("scripts", required: false)
</body>
</html>
