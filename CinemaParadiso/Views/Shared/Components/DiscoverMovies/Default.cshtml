@model List<DiscoverMovie>
@{ 
    int carousel = 0;
}
@section styles { 
    <style type="text/css">
        img {            
            height: 100px !important;            
        }
    </style>
}
<div class="carousel slide" data-ride="carousel">    
    <div class="carousel-inner">

        @foreach (DiscoverMovie movie in Model)
        {
            if (carousel == 0)
            {
                <div class="carousel-item active">
                    <img src="@String.Concat(DiscoverMovie.ImagesPath, movie.PosterPath)" alt="Los Angeles">                    
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="@String.Concat(DiscoverMovie.ImagesPath, movie.PosterPath)" alt="Los Angeles">                   
                </div>
            }
            carousel++;
        }

    </div>    
</div>